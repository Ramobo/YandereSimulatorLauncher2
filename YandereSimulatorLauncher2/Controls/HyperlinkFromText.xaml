<UserControl x:Class="YandereSimulatorLauncher2.Controls.HyperlinkFromText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YandereSimulatorLauncher2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="MyDisplayText" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32" Foreground="White" Text="DisplayText" FontFamily="{StaticResource LeagueGothic}">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="White" Opacity="0.9"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
